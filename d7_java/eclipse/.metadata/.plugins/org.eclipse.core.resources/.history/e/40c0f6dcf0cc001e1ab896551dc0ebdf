import java.util.Arrays;

public class praticando {

	public static void main(String[] args) {
		System.out.println(Arrays.toString(fakeBin("06001110011010101161101789")));
	}
	
	
//	### COMPARANDO PARÂMETROS DE UMA FUNÇÃO ###
