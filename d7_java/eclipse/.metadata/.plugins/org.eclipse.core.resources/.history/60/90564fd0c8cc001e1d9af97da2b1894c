
public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
//		### BITWISE ###
		
//		int n1 = 89;
//		int n2 = 60;
//		
//		System.out.println(n1 & n2);
//		System.out.println(n1 | n2);
//		System.out.println(n1 ^ n2);
		
//		### FUNÇÕES INTERESSANTES PARA STRINGS ###
		
		String original = "abc deG hiJ klM    ";
		
		String s01 = original.toLowerCase(); // retorna os valores em minúsculo.
		String s02 = original.toUpperCase(); // retorna os valores em maiúsculos.
		String s03 = original.trim(); // elimina todos os espaços nos cantos das strings.
		String s04 = original.substring(2); // pega a partir de segundo caracter adiante.
		String s05 = original.substring(2, 5); // obtem valores a partir do 2 e a baixo do 9.
		String s06 = original.replace("a", "A"); // troca o primeiro valor pelo segundo.
		
		System.out.println("Original: -" + original + "-");
		System.out.println("ToLowerCase: -" + s01 + "-");
		System.out.println("ToUpperCase: -" + s02 + "-");
		System.out.println("Trim: -" + s03 + "-");
		System.out.println("SubString: -" + s04 + "-");
		System.out.println("SubString entre valores: -" + s05 + "-");
		System.out.println("Replace: -" + s06 + "-");
	}

}
